Algoritmo "ler número"

Var
   N1, N2, S: Inteiro
   M: Real
Inicio
      Escreva("Informe un número: ")
      Leia(N1)
      Escreva("Informe outro número: ")
      Leia(N2)
      //S <- N1 + N2
      //Escreva("A soma entre",N1 , " e",N2 , " é igual a", S)
      M <- (N1 + N2)/2
      Escreva("A média entre",N1 , " e",N2 , " é igual a", M)

Fimalgoritmo